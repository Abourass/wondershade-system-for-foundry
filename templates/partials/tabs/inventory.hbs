<div class="tab items" data-tab="inventory" data-group="primary-tabs">
  <h1 class="skillHeading">{{ localize "WonderSystem.Inventory" }}</h1>
  <div class="currencies">
    <!-- Currency: Copper -->
    <div class="currency">
      <label for="data.currency.cp" class="label">
        {{ localize "WonderSystem.CurrencyCP" }}
      </label>
      <input
        type="text"
        class="input"
        name="data.currency.cp"
        value="{{ actorData.currency.cp }}"
      >
    </div>
    <!-- /Currency: Copper -->

    <!-- Currency: Silver -->
    <div class="currency">
      <label for="data.currency.sp" class="label">
        {{ localize "WonderSystem.CurrencySP" }}
      </label>
      <input
        type="text"
        class="input"
        name="data.currency.sp"
        value="{{ actorData.currency.sp }}"
      >
    </div>
    <!-- /Currency: Silver -->

    <!-- Currency: Gold -->
    <div class="currency">
      <label for="data.currency.gp" class="label">
        {{ localize "WonderSystem.CurrencyGP" }}
      </label>
      <input
        type="text"
        class="input"
        name="data.currency.gp"
        value="{{ actorData.currency.gp }}"
      >
    </div>
    <!-- /Currency: Gold -->

    <!-- Currency: Platinum -->
    <div class="currency">
      <label for="data.currency.pp" class="label">
        {{ localize "WonderSystem.CurrencyPP" }}
      </label>
      <input
        type="text"
        class="input"
        name="data.currency.pp"
        value="{{ actorData.currency.pp }}"
      >
    </div>
    <!-- /Currency: Platinum -->

    <!-- Currency: Drops -->
    <div class="currency">
      <label for="data.currency.drops" class="label">
        {{ localize "WonderSystem.CurrencyDrops" }}
      </label>
      <input
        type="text"
        class="input"
        name="data.currency.drops"
        value="{{ actorData.currency.drops }}"
      >
    </div>
    <!-- /Currency: Drops -->
  </div>
  <hr />
  <ul>
    {{#each weapons as |weapon wID|}}
      <li data-item-id="{{weapon._id}}" class="item">
        <div class="img-col">
          <a class="rollable" data-roll-type="item">
            <img src="{{weapon.img}}" title="{{weapon.name}}" width="24" height="24"/>
          </a>
        </div>
        <div class="desc-col">
          <h4>{{weapon.name}}</h4>
        </div>
        <div class="controls-col">
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item">
              <i class="fas fa-edit"></i>
            </a>
            <a class="item-control item-delete" title="Delete Item">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </div>
      </li>
    {{/each}}
  </fieldset>
</div>
