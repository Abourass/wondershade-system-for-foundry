<div class="item-section">
  <div class="collapsible">
    <span>{{ localize "WonderSystem.ItemTypeContainerPl" }}</span>
    <div>
      <a title="Add Item" class="item-control add-item">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </div>
  <ul class="collapsible-content">
    {{#if (hasSome containers)}}
      {{#each containers as |container wID|}}
        <li data-item-id="{{container._id}}" class="item">
          <div class="img-col">
            <a class="rollable" data-roll-type="item">
              <img src="{{container.img}}" title="{{container.name}}" width="24" height="24"/>
            </a>
          </div>
          <div class="desc-col">
            <h4>{{container.name}}</h4>
          </div>
          <div class="controls-col">
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control item-delete" title="Delete Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </div>
        </li>
      {{/each}}
    {{else}}
      <div class="flex-col">
        <span>You have no containers</span>
        <small class="italic">Do pockets count?</small>
      </div>
    {{/if}}
  </ul>
</div>
