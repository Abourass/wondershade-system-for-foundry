<div class="item-section">
  <div class="collapsible">{{ localize "WonderSystem.ItemTypeToolPl" }}</div>
  <ul class="collapsible-content">
    {{#each tools as |tool wID|}}
      <li data-item-id="{{tool._id}}" class="item">
        <div class="img-col">
          <a class="rollable" data-roll-type="item">
            <img src="{{tool.img}}" title="{{tool.name}}" width="24" height="24"/>
          </a>
        </div>
        <div class="desc-col">
          <h4>{{tool.name}}</h4>
        </div>
        <div class="controls-col">
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item">
              <i class="fas fa-edit"></i>
            </a>
            <a class="item-control item-delete" title="Delete Item">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
